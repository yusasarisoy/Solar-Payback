<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winter"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Fragment.FragmentBill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/solar_energy" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/proxima_nova"
            android:text="@string/appName"
            android:textColor="@color/coreBlack"
            android:textSize="25sp"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLanguage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/language" />

            <ImageView
                android:id="@+id/imageTheme"
                android:layout_width="26dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/light" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/darkSlateGray" />

    <TextView
        android:id="@+id/billDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/proxima_nova"
        android:gravity="center"
        android:text="@string/completeBill"
        android:textColor="@color/coreBlack"
        android:textSize="18sp"
        tools:ignore="UnusedAttribute" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/darkSlateGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/billMonths"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50sp"
                android:fontFamily="@font/proxima_nova"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/coreBlack"
                android:textSize="25sp"
                tools:ignore="UnusedAttribute"
                tools:text="January" />

            <TextView
                android:id="@+id/textPayment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:fontFamily="@font/proxima_nova"
                android:gravity="center"
                android:text="@string/billingAmount"
                android:textColor="@color/coreBlack"
                android:textSize="20sp"
                tools:ignore="UnusedAttribute" />

            <EditText
                android:id="@+id/billPayment"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/smooth_corners"
                android:fontFamily="@font/proxima_nova"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColor="@color/coreBlack"
                android:textSize="23sp"
                tools:ignore="UnusedAttribute"
                tools:text="123" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textPowerConsumption"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:fontFamily="@font/proxima_nova"
                android:gravity="center"
                android:text="@string/totalPowerConsumption"
                android:textColor="@color/coreBlack"
                android:textSize="20sp"
                tools:ignore="UnusedAttribute" />

            <EditText
                android:id="@+id/billPowerConsumption"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/smooth_corners"
                android:fontFamily="@font/proxima_nova"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textColor="@color/coreBlack"
                android:textSize="23sp"
                tools:ignore="UnusedAttribute"
                tools:text="256" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSignOut"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:fontFamily="@font/proxima_nova"
                android:text="@string/signOut"
                android:textColor="@color/red"
                android:textSize="18sp"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLocation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/map"
                android:fontFamily="@font/proxima_nova"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:fontFamily="@font/proxima_nova"
                android:text="@string/next"
                android:textColor="@color/orange"
                android:textSize="18sp"
                tools:ignore="UnusedAttribute" />

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:fontFamily="@font/proxima_nova"
                android:text="@string/continueTo"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:visibility="gone"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>